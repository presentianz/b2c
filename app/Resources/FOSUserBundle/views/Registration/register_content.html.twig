{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
 	<div class="breadcrumb">
            <div class="register-tab active">
                <i class="fa fa-info-circle"></i>注册
            </div> 
            <div class="register-tab">
                <i class="fa fa-info-circle"></i>邮箱验证
            </div>
            <div class="register-tab">
                 <i class="fa fa-info-circle"></i>激活
            </div>
            <div class="login-link">
                <h5>已经有账号？<a href="{{path('fos_user_security_login')}}">登录</a></h5>
            </div>
        </div>

       {# {{dump(form_widget(form))}} #}

    {{ form_start(form, {'attr': {'id':'register-form'}}) }}
            <div class="register-content col-xs-5">
                <div class="controls">
                    {{form_label(form.email)}}
                    {{form_widget(form.email, {'attr': {'placeholder': '*请输入您的常用邮箱'}})}}
                    {{ form_errors(form.email) }}
                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>邮箱不能为空</h6>
                    </div>
                </div>					
                <div class="controls">
                    {{form_label(form.username)}}
                    {{form_widget(form.username, {'attr': {'placeholder': '*请输入您的用户名'}})}}
                    {{ form_errors(form.username) }}
                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>用户名不能为空</h6>
                    </div>
                </div> 

                {#<div class="controls">
                    {{form_label(form.username)}}
                    {{form_widget(form.username, {'attr': {'placeholder': '请输入您的联系电话'}})}}
                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>联系电话不能为空</h6>
                    </div>
                </div>#}


                <div class="controls">
                 {{form_label(form.plainPassword.first)}}
                 {{form_widget(form.plainPassword.first, {'attr': {'placeholder': '*请输入6到20位的数字，字母组合', 'maxlength': '20'}})}}
                    {{ form_errors(form.plainPassword) }}
                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>密码不能为空</h6>
                    </div>
                </div>
                <div class="controls">
                    <label></label>
                    <div class="security-level">
                        <span class="block1">危险</span>
                        <span class="block2">适中</span>
                        <span class="block3">安全</span>
                    </div>
                </div>
                <div class="controls">
                    {{form_label(form.plainPassword.second)}}
                   {{form_widget(form.plainPassword.second, {'attr': {'placeholder': '*请再次输入密码'}})}}
                    {{ form_errors(form.plainPassword.second) }}
                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>密码不能为空</h6>
                    </div>
                </div> 

                <div class="controls last">
                    <input type="checkbox" id="checkinfo" checked>

                    <a href="/terms_en" id="terms">我已阅读并接受《丰盛湾用户协议》</a>

                    <i class="fa check-icon"></i>
                    <div class="error">
                        <i class="fa fa-caret-left"></i>
                        <h6>请勾选并阅读协议</h6>
                    </div>	
                </div>	
              <input id="register_btn" type="submit" value="{{ 'registration.submit'|trans }}" onsubmit="return reigster();" /> 
              
            </div>
        {{ form_rest(form) }}

        {{ form_end(form) }}

{% endblock %}



