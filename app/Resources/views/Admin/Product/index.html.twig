                                        <td>{{ entity.soldNo }}</td>

                                        <td>{{ entity.index_weight }}</td>

                                        <td>{{ entity.weight }}</td>

                                        <td>{{ entity.productKey }}</td>

                                        <td>{{ entity.click }}</td>

                                        <td>{{ entity.brand }}</td>

                                        <td>{{ entity.widget_weight }}</td>

