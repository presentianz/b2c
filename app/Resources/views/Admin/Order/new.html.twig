{% extends 'Admin/admin_layout.html.twig' %}

{% block adminOrder %}
    <li class="active">
        <a href="#" class="auto">
            <span class="pull-right text-muted">
                <i class="i i-circle-sm-o text"></i>
                <i class="i i-circle-sm text-active"></i>
            </span>
            <i class="i i-stack icon"></i>
            <span class="font-bold">订单管理</span>
        </a>
        <ul class="nav dk">
            <li>
                <a href="{{ path('admin_order') }}" class="auto">
                    <i class="i i-dot"></i>
                    <span>订单列表</span>
                </a>
            </li>
            <li class="active">
              <a href="{{ path('admin_order_new') }}" class="auto">
                  <span class="pull-right text-muted">
                    <i class="i i-circle-sm-o text"></i>
                    <i class="i i-circle-sm text-active"></i>
                  </span>
                  <i class="i i-dot"></i><span>添加订单</span>
              </a>
            </li>
        </ul>
    </li>
{% endblock %}

  {% block body %}
      <section id="content">
          <section class="vbox">
              <header class="header bg-light b-b">
                  <p><strong>添加订单</strong></p>
              </header>
              <section class="scrollable padder">

                  <div class="form">
                      {{ form_start(form) }}
                      <div><label>订单号：</label> {{ form_widget(form.orderId) }}</div>
                      <div><label>订单状态：</label> {{ form_widget(form.status) }}</div>
                      <div><label>下单用户：</label> {{ form_widget(form.user) }}</div>
                      <div><label>总价：</label> {{ form_widget(form.total_price) }}</div>
                      <div><label>运费：</label> {{ form_widget(form.post_fee) }}</div>
                      <div><label>创建时间：</label> {{ form_widget(form.create_at) }}</div>
                      <div><label>支付时间：</label> {{ form_widget(form.paid_at) }}</div>
                      <div><label>收货地址：</label> {{ form_widget(form.shipmentAddress) }}</div>
                      <div class="admin-buttons">
                          {{ form_widget(form.submit, { 'label': '添加' }) }}
                          <a href="{{ path('admin_order') }}">返回
                          </a>
                      </div>
                      {{ form_end(form) }}
                  </div>

              </section>

          </section>
      </section>
  {% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/SimpleAjaxUploader.js') }}"></script>
    <script src="{{ asset('js/admin-order.js') }}"></script>
{% endblock %}
