

{% if data.widget[0]|length > 0 %}
<div class="hotdeal">
    <div class="row-up">
        <div class="page-title">
            <div class="page-leaf-top"></div>
            <div class="page-leaf"><img src="{{ asset('img/leaf.png') }}" alt=""></div>
            <div><h4>今日推介</h4></div>
        </div>

    </div>
    <div class="row">
        {% for product in data.widget[0] %}
            <div class="col-xs-4">
                <a href="{{ path('product', {id : product.id}) }}">
                    <div class="tag tag-b">
                        <p>Now</p>
                    </div>
                    <div class="tagged-image">
                        <img class="lazy" src="{{ asset('img/src') }}/{{ product.imageLink }}"
                             data-original="{{ asset('img/src') }}/{{ product.imageLink }}/poster/{{ product.poster }}"
                             alt="">
                    </div>

                    <div class="pro-text">
                        <div class="pull-left">
                            <div class="pro-title">{{ product.name }}</div>
                            <div class="sold-no">售出:&nbsp;{{ product.soldNo }}</div>
                        </div>
                        <div class="pull-right">
                            <div class="price">${{ product.priceDiscounted }}</div>
                            <del>${{ product.price }}</del>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}
