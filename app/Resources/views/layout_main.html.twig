        <script type="text/javascript">
            $(document).ready(function() { 
                $.ajax({
                        url:  "{{ path('cart_ajax_get') }}",               
                        method: "GET",
                        dataType: "json"
                }).done(function (rep) {
                    var num = null;
                    var total = null;
                    if (rep == "none" || rep == "" || rep == null) {
                        num = 0;
                        total = 0.00;           
                    } else {
                        $.each(rep, function(index, value) {
                            num += Number(value.count);
                            total = Math.round((total + parseInt(value.count) * Number(value.price_discounted))*100)/100;
                        });   
                    }
                    $('#cart').html("<div class='cart-show'><i class='fa fa-shopping-cart'><i class='fa fa-circle'><h6>" + num + "</h6></i></i>&nbsp;$" + total +"&nbsp;</div>");
                    if(num <= 99){
                        $('#number_in_cart').html(num);
                    } else {
                        $('#number_in_cart').html("99+");
                    }
                    
                })
            });

            $(document).ready(function(){
