</div>
</div>   
</div>
<div class="bg-mask"></div>
    <div class="pop-cart">
        <h3><i class="fa fa-info-circle"></i>
            <span>你的商品添加成功！</span></h3>
            <span>
                <form method="get" action="{{ path('cart') }}">
                    <input type="submit" value="去购物车结算" data-id="{{ data.product.id }}" class="buy-now">
                </form>
            </span>
            <p class="continue-shop">继续购物</p>
        </div>
   
    {% endblock %}

    {% block javascripts %}
    <script src="{{ asset('js/product.js') }}"></script>
    <script type="text/javascript">
        $('#add-comment').submit(function(e) {
      e.preventDefault();
      var productId = $('input[type=submit]').attr("data-id");
      $('#loading').css('display','block');
      var $this = $(this).serialize();
      $.ajax({
          url: "{{path('add_comment_ajax')}}",
          method: "POST",
          data: $('#add-comment').serialize(),
          dataType: "json"
        })
        .done(function (rep) {
            console.log(rep);
          if(rep.success) {
            $('#loading').css('display','none');
         var html = '<tr class="comments-record-item"><td class="comments-date">'+ rep.commentAt+ 
                    '</td><td class="comments-name">'+rep.user.username + 
                    '</td><td class="comments">' + rep.text + 
                    '</td><td class="comments-star">'+ rep.star + 
                    '</td></tr>';

            $('#comments-record-list tbody').append(html);
          }
          else{
            alert('用户请登入才可以评论');
          }
        })
    })
    </script>
    {% endblock %}
